<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil_administrador.presentation.PefilAdministrador">

    <LinearLayout
        android:id="@+id/perfil_config_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="450dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Perfil de administrador"
            android:textColor="@color/button"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/perfil_config_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_subfondo"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perfil_config_header">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacion de empresa"
                android:textColor="@color/fondo"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_subpaneles"
                android:padding="10dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/button"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_fondo"
                    android:hint="Nombre de administrador"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/background_fondo"
                    android:hint="Correo de administrador"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPassword"
                    android:background="@drawable/background_fondo"
                    android:hint="ContraseÃ±a de administrador"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_fondo"
                    android:hint="Nombre de la empresa"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="text"
                    android:background="@drawable/background_fondo"
                    android:hint="Direccion de la empresa"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/background_fondo"
                    android:hint="Numero telefonico"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacion de Licencia"
                android:textColor="@color/fondo"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_subpaneles"
                android:padding="10dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/button"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_fondo"
                    android:hint="Numero de licencia"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/background_fondo"
                    android:hint="Estado de licencia"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPassword"
                    android:background="@drawable/background_fondo"
                    android:hint="Fecha de caducidad"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_fondo"
                    android:hint="Fecha de ultimo pago"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="text"
                    android:background="@drawable/background_fondo"
                    android:hint="Tipo de licencia"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/button"
                    android:textStyle="bold"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/background_fondo"
                    android:hint="Tipo de pago"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perfil_config_framelayout">
        <ImageView
            android:id="@+id/perfil_config_imgicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="370dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_person"/>
        <Button
            android:id="@+id/perfil_config_btnguardar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/button"
            android:text="Guardar cambios"
            android:textColor="@color/fondo"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/perfil_config_btncancelar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/button"
            android:text="cancelar"
            android:textColor="@color/fondo"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>